{% extends "OCBookingBundle::Layout.html.twig" %}



{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <h1>Le Louvre</h1>
                <h2>Rue de Rivoli,</h2>
                <h3>75001, PARIS</h3>
            </div>
            <div class="" col-lg-8>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2624.874102365142!2d2.335455316064797!3d48.86061107928765!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e671d877937b0f%3A0xb975fcfa192f84d4!2sMus%C3%A9e+du+Louvre!5e0!3m2!1sfr!2sfr!4v1517247676410"
                        width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
            </div>
        </div>
    </div>
    <div class="container">
        <h3>Formulaire de contact</h3>

        <div class="w3-bar-item">

            {{ form_start(form, {'attr': {'class':'form-horizontal'}}) }}
            {{ form_errors(form) }}


            {# selecteur Prénom #}

            <div class="w3-container">

                {{ form_label(form.firstName, "Prénom") }}

                {{ form_errors(form.firstName) }}

                {{ form_widget(form.firstName, {'attr': {'class':'form-control'}}) }}

            </div>

            {# selecteur Nom #}

            <div class="w3-container">

                {{ form_label(form.lastName, "Nom") }}

                {{ form_errors(form.lastName) }}

                {{ form_widget(form.lastName, {'attr': {'class':'form-control'}}) }}

            </div>

            {# selecteur adresse mail #}

            <div class="w3-container">

                {{ form_label(form.mailAdress, "Adresse Email") }}

                {{ form_errors(form.mailAdress) }}

                {{ form_widget(form.mailAdress, {'attr': {'class':'form-control'}}) }}

            </div>

            {# selecteur sujet #}

            <div class="w3-container">


                {{ form_label(form.subject, "Sujet") }}
                {{ form_errors(form.subject) }}

                {{ form_widget(form.subject) }}

            </div>

            <div class="w3-container">

                {{ form_label(form.text, "Texte") }}
                {{ form_widget(form.text) }}


            </div>

            <div class=" w3-container" id="add-ticket">

                {{ form_widget(form.envoyer, {'attr': {'class': 'w3-button'}}) }}

            </div>

            {{ form_end(form) }}

        </div>

    </div>
{% endblock %}